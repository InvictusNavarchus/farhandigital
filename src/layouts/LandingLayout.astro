---
import BaseLayout from "./BaseLayout.astro";

export interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  canonicalURL?: string;
}

const {
  title = "Farhan Digital | Affordable High-Performance Websites for Small Businesses",
  description = "Get professional, blazing-fast websites for your small business with zero hosting costs.",
  ogImage = "https://farhandigital.id/banner.png",
  canonicalURL = "https://farhandigital.id/",
} = Astro.props;

// Landing page specific meta tags
const additionalMeta = [
  '<meta name="keywords" content="freelance web developer, small business websites, Cloudflare websites, affordable web design, high-performance sites, company profiles, landing pages, zero-cost hosting, web development Indonesia" />',
  '<meta name="copyright" content="Â© 2025 Farhan Digital. All Rights Reserved." />',
  '<meta name="language" content="English" />',
  '<meta name="revisit-after" content="7 days" />',
  '<meta property="og:image:width" content="1200" />',
  '<meta property="og:image:height" content="630" />',
  '<meta property="og:locale" content="en_US" />',
  '<meta name="apple-mobile-web-app-capable" content="yes" />',
  '<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />',
  '<link rel="stylesheet" href="/fonts.css">',
];
---

<BaseLayout
  {title}
  {description}
  {ogImage}
  {canonicalURL}
  section="landing"
  favicon="/logo.png"
  themeColor="#F48120"
  {additionalMeta}
>
  <slot />
</BaseLayout>
