---
import Button from '../ui/Button.astro';
import WhatsappIcon from '../ui/icons/WhatsappIcon.astro';
---

<header id="main-header" class="fixed top-0 left-0 w-full z-50 transition-all duration-300 bg-transparent">
  <div class="container mx-auto px-6 py-4 flex justify-between items-center">
    <a href="/" class="flex items-center space-x-3 transition-opacity hover:opacity-80">
      <img src="/logo.png" alt="Farhan Digital Logo" class="h-10 w-10 object-contain" />
      <span class="text-2xl font-bold text-white">
        Farhan <span class="text-primary">Digital</span>
      </span>
    </a>
    <nav class="hidden md:flex items-center space-x-8">
      <a href="#about" class="text-text-secondary hover:text-primary transition-colors">About</a>
      <a href="#services" class="text-text-secondary hover:text-primary transition-colors">Services</a>
      <a href="/blog/" class="text-text-secondary hover:text-primary transition-colors">Blog</a>
    </nav>
    <div class="hidden md:block">
      <Button href="https://link.farhandigital.id/whatsapp" target="_blank" rel="noopener noreferrer">
        <WhatsappIcon class="h-5 w-5 mr-2" />
        Contact Me
      </Button>
    </div>
  </div>
</header>

<script>
  const header = document.getElementById('main-header');
  
  function handleScroll() {
    if (header) {
      if (window.scrollY > 10) {
        header.classList.add('bg-light-dark/80', 'backdrop-blur-sm', 'shadow-lg');
      } else {
        header.classList.remove('bg-light-dark/80', 'backdrop-blur-sm', 'shadow-lg');
      }
    }
  }
  
  window.addEventListener('scroll', handleScroll);
</script>
