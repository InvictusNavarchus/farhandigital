---
import { getCollection } from "astro:content";
import Main from "@/layouts/Main.astro";
import BlogLayout from "@/layouts/BlogLayout.astro";
import Tag from "@/components/blog/Tag.astro";
import Header from "@/components/blog/Header.astro";
import Footer from "@/components/blog/Footer.astro";
import getUniqueTags from "@/utils/blog/getUniqueTags";
import { SITE } from "@/config";

const posts = await getCollection("blog");

let tags = getUniqueTags(posts);
---

<BlogLayout title={`Tags | ${SITE.blogTitle}`}>
  <Header />
  <Main pageTitle="Tags" pageDesc="All the tags used in posts.">
    <ul>
      {tags.map(({ tag, tagName }) => <Tag {tag} {tagName} size="lg" />)}
    </ul>
  </Main>
  <Footer />
</BlogLayout>
